<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nextDay_cardView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/std_white"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    app:cardCornerRadius="3dp"
    android:elevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nextDay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/day1_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="30sp"
            android:gravity="center_vertical"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/nextDay_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#0073FF" />

        <TextView
            android:id="@+id/nextDay_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="@string/day1_temp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center" />
    </LinearLayout>
</androidx.cardview.widget.CardView>